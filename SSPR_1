//Напишите программу, которая запрашивает у пользователя температуру в
//градусах по Фаренгейту и переводит ее в градусы по Цельсию, после чего 
//отображает температуру в градусах по Цельсию на экране.
//Формула для преобразования:
//Celsius = 5 * Fahrenheit / 9 – 17.8



#include <iostream>   // прикрепляем библиотеку ввода/вывода
using namespace std;   // используем пространственные имена для библиотек 

	int main(void) // исходная точка
{
	setlocale(LC_ALL,"Rus"); // указываем кодировку кирилицы для вывода на экран
	cout << "Autor: Biriukov Oleksandr <25PR21>" << endl; // оператор вывода на экран текста

	double Fahrenheit = 0; // присваиваем значение с помощью типа данных
	double Celsius; // присваиваем значение с помощью типа данных

	
	cout << "Vvedite gradysu v Fahrenheitah = " << endl; // Выводим на экран текст, оператор вывода на экран
	cin >> Fahrenheit; //вводим в консоли переменную, оператор ввода с клавиатуры


	Celsius = 5 * Fahrenheit / 9 - 17.8; // пишем указанное значение
	cout << "Температура по Цельсию = " << Celsius << endl; // Выводим на экран текст, оператор вывода на экран

	system ("pause"); // ожидание дальнейших действий пользователя 

}



//Заданы три сопротивлении R1, R2, R3 . Вычислить значение 
//сопротивления R0 по формуле: 1/R0 = 1/R1+1/R2+1/R3.
//Контрольный пример: R1=2, R2=4, R3=8 R0 = 1.142857

 
#include <iostream> // прикрепляем библиотеку ввода/вывода
using namespace std; // используем пространственные имена для библиотек 

void main() // исходная точка
{
	cout << "Autor: Biriukov Oleksandr <25PR21>" << endl; // оператор вывода на экран текста

	double R1  , R2 = 0, R3 = 0; // присваиваем значение с помощью типа данных
	double R0;
    
	cout << "Vvedite sopritivlenie R1 = ";// << R1 << endl; // Выводим на экран текст, оператор вывода на экран
	cin >> R1; //вводим в консоли переменную, оператор ввода с клавиатуры

	cout << "Vvedite sopritivlenie R2 = " << R2 << endl; // Выводим на экран текст, оператор вывода на экран
	cin >> R2; //вводим в консоли переменную, оператор ввода с клавиатуры

	cout << "Vvedite sopritivlenie R3 = " << R3 << endl; // Выводим на экран текст, оператор вывода на экран
	cin >> R3;//вводим в консоли переменную, оператор ввода с клавиатуры
	

	R0 = 1 / R1 + 1 / R2 + 1 / R3; // задаем значение для вычисления сопротивления
	cout << "Sopritvlenie R0 = " << R0 << endl; // Выводим на экран текст, оператор вывода на экран

	system ("pause"); // ожидание дальнейших действий пользователя 
}



//По заданной длине окружности найти площадь круга по формуле S = pi * (R * R), 
//радиус вычислить из формулы длины окружности: L = 2 * pi * R
//Примечание pi = 3.14

#include<iostream> // прикрепляем библиотеку ввода/вывода
using namespace std; // используем пространственные имена для библиотек 

void main() // исходная точка

{
	cout << "Autor: Biriukov Oleksandr <25PR21>" << endl; // оператор вывода на экран текста

	setlocale(LC_ALL,"Rus"); // указываем кодировку кирилицы для вывода на экран

	double S, pi, R, L; // присваиваем значение с помощью типа данных

	cout << "Введите длину окружности = " << endl; // Выводим на экран текст, оператор вывода на экран
	cin >> L; //вводим в консоли переменную, оператор ввода с клавиатуры

	pi = 3.14; // пришем указанное значение
	R = L / (2 * pi); // пришем указанное значение
	cout << "Радиус = " << R << endl; // Выводим на экран текст, оператор вывода на экран

	S = pi * (R * R); // пришем указанное значение
	cout << "Площадь круга = " << S << "\n"; // Выводим на экран текст, оператор вывода на экран
	system ("pause"); // ожидание дальнейших действий пользователя 
}



//Вычислить пройденное расстояние при прямолинейном равноускоренном 
//движении по формуле S = v*t + (a*(t*t))/2, где 
//v – скорость, t – время, а – ускорение

#include <iostream> // прикрепляем библиотеку ввода/вывода
using namespace std; // используем пространственные имена для библиотек 

void main () // исходная точка
{
	setlocale(LC_ALL,"Rus"); // указываем кодировку кирилицы для вывода на экран
	cout << "Autor: Biriukov Oleksandr <25PR21>" << endl; // оператор вывода на экран текста

	double v, t, a; // присваиваем значение с помощью типа данных
	double S; // присваиваем значение с помощью типа данных

	cout << "Vvedite speed v = " << endl; // оператор вывода на экран текста
	cin >> v; //вводим в консоли переменную, оператор ввода с клавиатуры

	cout << "Vvedite time t = " << endl; // оператор вывода на экран текста
	cin >> t; //вводим в консоли переменную, оператор ввода с клавиатуры

	cout << "Vvedite acceleration a = " << endl; // оператор вывода на экран текста
	cin >> a; //вводим в консоли переменную, оператор ввода с клавиатуры

	S = v * t + (a * (t * t)) / 2; // задаем значение для вычисление пройденного расстояния
	cout << "Пройденное расстояние = " << S << "\n"; // оператор вывода на экран текста


	system ("pause"); // ожидание дальнейших действий пользователя 


}




//Напишите программу, которая запрашивает ваш вес в килограммах и
//рост в метрах. Пусть программа вычислит и отобразит на экране ваш 
//индекс массы тела (ИМТ). Чтобы вычислить ИМТ необходимо вес (в 
//килограммах) разделить на рост (в метрах), возведенный в квадрат

#include <iostream> // прикрепляем библиотеку ввода/вывода
using namespace std; // используем пространственные имена для библиотек 

void main() // исходная точка
{
	cout << "Autor: Biriukov Oleksandr <25PR21>" << endl; // оператор вывода на экран текста
	setlocale(LC_ALL,"Rus"); // указываем кодировку кирилицы для вывода на экран

	double Growth, Weight; // присваиваем значение с помощью типа данных
	double IMT; // присваиваем значение с плавающей точкой


	cout << "Введите ваш рост => " << endl; // Выводим на экран текст, оператор вывода на экран 
	cin >> Growth;  //вводим в консоли переменную, оператор ввода с клавиатуры
	cout << "Введите ваш вес => " << endl; // Выводим на экран текст, оператор вывода на экран 
	cin >> Weight; //вводим в консоли переменную, оператор ввода с клавиатуры

	IMT = Weight / (Growth * Growth); // задеем значение ИМТ
	cout << "Индекс массы вашего тела = " << IMT << endl; // Выводим на экран текст, оператор вывода на экран 

	system ("pause"); // ожидание дальнейших действий пользователя 


}
